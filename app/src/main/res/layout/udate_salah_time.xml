<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/maintry"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <TextView
        android:id="@+id/txtsalah"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradientbackground"
        android:gravity="center"
        android:text="Update Salah Times"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtsalah"
        android:layout_above="@+id/testAd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">




            <TextView
                android:id="@+id/SelectNamazName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_close_design"
                android:entries="@array/namazName"
                android:minHeight="60dp"
                android:padding="10dp"
                android:popupBackground="@color/Skype"
                android:textAlignment="center"
                android:textColor="@color/botomcolor"
                android:textColorHint="@color/hintcolor" />


            <EditText
                android:id="@+id/ADDNamazStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/whitebutton"
                android:focusableInTouchMode="false"
                android:hint="Enter Start Time"
                android:singleLine="true"
                android:minHeight="55dp"
                android:focusable="false"
                android:editable="false"
                android:padding="10dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor" />


            <EditText
                android:id="@+id/ADDJammahTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:editable="false"
                android:singleLine="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebutton"
                android:hint="Enter Jammah Time"
                android:inputType="time"
                android:minHeight="55dp"
                android:padding="10dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor" />


            <EditText
                android:id="@+id/ADDNamazEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="time"
                android:background="@drawable/whitebutton"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:editable="false"
                android:hint="Enter End Time"
                android:minHeight="55dp"
                android:padding="10dp"
                android:textColor="@color/textcolor"

                android:textColorHint="@color/hintcolor" />




        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ADDSalahTimeCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/textborder"
            android:minHeight="55dp"
            android:text="@string/cancel"
            android:textColor="@color/TextDarkColor" />

        <Button
            android:id="@+id/ADDSalahTimeUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_close_design"
            android:minHeight="55dp"
            android:text="@string/Update"
            android:textColor="@color/textcolor" />
    </LinearLayout>
</RelativeLayout>